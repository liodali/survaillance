<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_save_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="dali.survillance.activity.SaveCall">
    <LinearLayout
        android:id="@+id/linearLayout_show_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include
            android:id="@+id/toolbar_save_call"
            layout="@layout/toolbar" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/linearLayout_show_audio"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_margin="10dp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/id_save_call_nom" />
    <TextView
        android:layout_margin="10dp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/id_save_call_phone" />
    <TextView
        android:layout_margin="10dp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/id_save_call_date" />
    <TextView
        android:layout_margin="10dp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/id_save_call_duration" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/id_save_call_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save this Call"

        android:textColor="@color/colorPrimary"
        android:background="@drawable/ripple_custom"


        />
    <Button
        android:id="@+id/id_save_call_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@+id/id_save_call_save"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        />

</LinearLayout>
</RelativeLayout>
